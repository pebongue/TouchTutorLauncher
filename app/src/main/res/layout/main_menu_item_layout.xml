<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/row_layout_background"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/menu_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gr 12 Maths Support Documents - Trigonometry and Angular Expressions"
        android:clickable="false"
        android:textSize="18sp"
        android:duplicateParentState="true"
        android:layout_margin="12dp"
        android:textColor="@drawable/row_layout_text"
        android:textAlignment="textEnd"/>

    <ImageView
        android:id="@+id/menu_item_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/ic_tt_doc_svg"
        android:clickable="false"
        android:duplicateParentState="true"/>

</LinearLayout>